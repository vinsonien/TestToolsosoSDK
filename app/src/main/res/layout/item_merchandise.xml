<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#ffffff"
    app:cardCornerRadius="@dimen/layout_margin_10">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/merPic"
            android:layout_width="@dimen/layout_merchandise_pic_wh"
            android:layout_height="@dimen/layout_merchandise_pic_wh" />

        <TextView
            android:layout_marginLeft="@dimen/layout_margin_10"
            android:id="@+id/merName"
            android:textColor="#000000"
            android:textSize="@dimen/layout_text_size_14"
            android:layout_marginTop="@dimen/layout_margin_10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_marginLeft="@dimen/layout_margin_10"
            android:layout_marginTop="@dimen/layout_margin_10"
            android:id="@+id/merTagLayout"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </LinearLayout>


        <LinearLayout
            android:layout_marginLeft="@dimen/layout_margin_10"
            android:layout_marginTop="@dimen/layout_margin_10"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/layout_margin_10">

            <TextView
                android:id="@+id/merPrice"
                android:textSize="@dimen/layout_text_size_16"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_marginLeft="@dimen/layout_margin_10"
                android:id="@+id/payAmount"
                android:textSize="@dimen/layout_text_size_12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>


        <com.vs.toolsoso.widget.view.MarqueeView.MarqueeView
            android:layout_gravity="center_vertical"
            android:id="@+id/marqueeView"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginTop="6dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="20dp"
            app:mvAnimDuration="500"
            app:mvDirection="bottom_to_top"
            app:mvInterval="3000" />


    </LinearLayout>
</android.support.v7.widget.CardView>
